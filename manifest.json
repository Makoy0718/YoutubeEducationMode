{
    "name": "YT Education Mode",
    "version": "0.1.0",
    "description": "Only playing useful videos",
    "permissions": ["storage", "tabs", "scripting"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_icon": {
            "16": "assets/Youtube_EducationMode_Logo.png",
            "32": "assets/Youtube_EducationMode_Logo.png",
            "48": "assets/Youtube_EducationMode_Logo.png",
            "128": "assets/Youtube_EducationMode_Logo.png"
        }
    },
    "manifest_version": 3
}